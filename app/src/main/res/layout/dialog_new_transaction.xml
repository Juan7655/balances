<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:src="@drawable/ic_open_in_browser_black_24dp"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/colorPrimaryLight"
        android:contentDescription="@string/app_name"/>
    <EditText
        android:id="@+id/transaction_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:hint="@string/price_text"
        android:autofillHints="@string/price_text"
        android:inputType="numberSigned" />
    <EditText
        android:id="@+id/transaction_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:hint="@string/transaction_description"
        android:autofillHints="@string/transaction_description"
        android:inputType="text"/>

    <CheckBox
        android:id="@+id/split_transaction_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/split_checkbox" />
</LinearLayout>